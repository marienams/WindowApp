<?xml version="1.0" encoding="utf-8"?>

<Window
    x:Class="WIN_FirstApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WIN_FirstApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d">



    <Grid>
        <Grid Background="#F5F5F5">
            <!-- Optional, set a background for the whole window -->
            <Border Background="White"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="20"
                Width="400"
                    Height="250">

                <StackPanel>
                    <!-- First Section: About -->
                    <TextBlock Text="About" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Foreground="#0078D4"/>
                    

                    <TextBlock Text="App version: xx.xx.xx"
                           FontSize="14" 
                           Foreground="Black" 
                           Margin="0,5,0,0"/>

                    

                    <!-- Second Section: Heading -->
                    <TextBlock Text="Heading" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Foreground="#0078D4"/>
                    

                    <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi vel enim dapibus, rutrum nunc id, ultricies justo."
                           TextWrapping="Wrap"
                           FontSize="14" 
                           Foreground="Black"
                           Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Background="#F5F5F5" VerticalAlignment="Center" Margin="0,20,0,0" >
            <!-- Container for the bar -->
            <Border Width="100" Height="200" Background="LightGray">
                <Grid VerticalAlignment="Bottom">
                    <!-- The blue bar -->
                    <Rectangle x:ConnectionId='4' x:Name="BlueBar" Fill="#275DB2" Height="100" RenderTransformOrigin="0.5,1">
                        <Rectangle.RenderTransform>
                            <ScaleTransform x:ConnectionId='5' x:Name="BarScaleTransform" ScaleY="0" />
                        </Rectangle.RenderTransform>
                        
                    </Rectangle>
                </Grid>
            </Border>
            <!-- Button to trigger the animation -->
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,20,0,0" Orientation="Vertical" Spacing="10">
                <Button x:ConnectionId='2' Content="Animate Bar"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,20,0,0"
                                         />
                <Button x:ConnectionId='3' Content="Long Press Bar"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,20,0,0"
                                                              
                                                                />
            </StackPanel>
            

        </Grid>
    </Grid>
</Window>

